@model IEnumerable<TIEB.Models.Persons>
@using TIEB.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profilim</h2>
<p>
    @Html.ActionLink("Banka Ekle", "Create","BankCartTypes")
</p>
<p>
    @Html.ActionLink("Credi Kartı Ekle", "Create","CreditCartTypes")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrithDate)
        </th>
        
        <th></th>
    </tr>
    @{ 
        var name = Session["UserName"] as Persons;
        if (name == null){return;}
    }
    
@foreach (var item in Model.Where(x => x.PersonID == name.PersonID)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrithDate)
            </td>


            <td>
                @Html.ActionLink("Düzenle", "Edit", new {  id=item.PersonID }) |
                @Html.ActionLink("Detay", "Details", new { id=item.PersonID }) |
                @Html.ActionLink("Sil", "Delete", new {  id=item.PersonID })
            </td>
        </tr>
    }
 
    
</table>
