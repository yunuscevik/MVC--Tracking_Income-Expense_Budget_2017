@model IEnumerable<TIEB.Models.BankCartType>
@using TIEB.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bankalarım</h2>

<p>
    @Html.ActionLink("Banka Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BankCartName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persons.Name)
        </th>
        <th></th>
    </tr>
    @{
        var name = Session["UserName"] as Persons;
        if (name == null) { return; }
    }
@foreach (var item in Model.Where(x=>x.PersonID == name.PersonID)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BankCartName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persons.Name)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.BankCartID }) |
            @Html.ActionLink("Detay", "Details", new { id=item.BankCartID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.BankCartID })
        </td>
    </tr>
}

</table>
<br /><br />
<div>
    @Html.ActionLink("Profilime Geri Dön ", "List", "Persons")
</div>